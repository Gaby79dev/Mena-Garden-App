<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:context=".ui.home.HomeFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


        <androidx.cardview.widget.CardView

            android:id="@+id/history"
            android:layout_width="338dp"
            android:layout_height="91dp"
            android:elevation="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FFD0DAC7"
            app:cardCornerRadius="25dp"
            app:cardElevation="25dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="84dp"
                android:layout_height="65dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/flowernight" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="259dp"
                android:layout_height="91dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/mena_gardenbtn"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold|italic" />


        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/menu"
                android:layout_width="338dp"
                android:layout_height="91dp"
                android:elevation="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFD0DAC7"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="259dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/menubtn"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/food" />


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView

                android:id="@+id/cocktails"
                android:layout_width="338dp"
                android:layout_height="91dp"
                android:elevation="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFD0DAC7"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="259dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/cocktailsbtn"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/cocktails" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/reserve"
                android:layout_width="338dp"
                android:layout_height="91dp"
                android:elevation="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFD0DAC7"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="259dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/reservebtn"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="125dp"
                    android:layout_height="87dp"
                    android:layout_gravity="end"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/reserve" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/gallery"
                android:layout_width="338dp"
                android:layout_height="91dp"
                android:elevation="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFD0DAC7"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="259dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/gallery"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"

                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/photogallery" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/offers"
                android:layout_width="338dp"
                android:layout_height="91dp"
                android:elevation="20dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFD0DAC7"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="259dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/offers_and_events"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/offers" />

            </androidx.cardview.widget.CardView>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="138dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/followus" />

            <androidx.cardview.widget.CardView

                android:id="@+id/followuscard"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="60dp"
                android:elevation="20dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#DAC9EA"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp">

                <LinearLayout
                    android:id="@+id/btnnet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebookbtn"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logofacebook"
                        android:contentDescription="@string/imageFacebook" />

                    <ImageView
                        android:id="@+id/instagrambtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/logoinstagram"
                        android:contentDescription="@string/imageInstagram" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>



